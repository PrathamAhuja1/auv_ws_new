<!-- Camera Sensor Plugin - Optimized for 12m gate detection -->
<gazebo reference="camera_forward_link">
  <sensor name="camera_forward" type="camera">
    <pose>0 0 0 0 0 0</pose>
    <camera>
      <!-- Wide FOV for better gate acquisition -->
      <horizontal_fov>1.91</horizontal_fov>  <!-- 109.4 degrees -->
      
      <image>
        <width>1280</width>
        <height>960</height>
        <format>RGB_INT8</format>
      </image>
      
      <!-- Extended clipping for long-range -->
      <clip>
        <near>0.1</near>
        <far>50.0</far>
      </clip>
      
      <!-- Standard pinhole lens -->
      <lens>
        <type>custom</type>
        <custom_function>
          <c1>1.05</c1>
          <c2>4</c2>
          <f>1.0</f>
          <fun>tan</fun>
        </custom_function>
        <scale_to_hfov>true</scale_to_hfov>
        <cutoff_angle>3.1415</cutoff_angle>
        <env_texture_size>512</env_texture_size>
      </lens>
      
      <!-- Minimal distortion -->
      <distortion>
        <k1>0.0</k1>
        <k2>0.0</k2>
        <k3>0.0</k3>
        <p1>0.0</p1>
        <p2>0.0</p2>
        <center>0.5 0.5</center>
      </distortion>
      
      <!-- Low noise for HSV detection -->
      <noise>
        <type>gaussian</type>
        <mean>0.0</mean>
        <stddev>0.003</stddev>
      </noise>
      
      <optical_frame_id>camera_forward_link</optical_frame_id>
    </camera>
    
    <always_on>1</always_on>
    <update_rate>30</update_rate>
    <visualize>true</visualize>
    <topic>/camera_forward/image_raw</topic>
  </sensor>
</gazebo>



